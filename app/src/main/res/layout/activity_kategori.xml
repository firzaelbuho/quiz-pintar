<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kategori"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/main_bg">

    <TextView

        android:fontFamily="@font/comic"
        android:id="@+id/welcome"
        android:padding="20dp"
        android:text="Pilih Kategori"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50sp"
        android:layout_marginTop="80sp"/>


        <Button
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/menu_bg"
            android:id="@+id/button1"
            android:padding="20dp"
            android:text="Umum"
            android:onClick="umum"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            />


        <Button
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comic"
            android:id="@+id/button3"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/menu_bg"
            android:gravity="center"
            android:onClick="sains"
            android:padding="20dp"
            android:text="Sains"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <Button
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/menu_bg"
            android:id="@+id/button2"
            android:padding="20dp"
            android:text="Teknologi"
            android:onClick="teknologi"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_width="300dp"
            android:layout_height="70dp"/>

        <Button
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/menu_bg"
            android:id="@+id/button4"
            android:padding="20dp"
            android:text="Hiburan"
            android:onClick="hiburan"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_width="300dp"
            android:layout_height="70dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:gravity="center|bottom"
    android:orientation="vertical" >

    <com.google.android.gms.ads.AdView
        android:layout_marginTop="20dp"
        android:id="@+id/spanduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-8201627220488781/4185640211" />

    </LinearLayout>





</LinearLayout>